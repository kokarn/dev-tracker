{
  "name": "site",
  "version": "2.0.0",
  "description": "A framework for running multiple dev trackers",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:components": "webpack --progress --colors && node scripts/build.js",
    "dev:serviceworker": "node scripts/build.js",
    "build": "webpack -p --progress && node scripts/build.js",
    "start": "webpack-dev-server --open",
    "lint:components": "eslint -c kokarn/react app/**/*",
    "lint:scripts": "eslint -c kokarn/nodejs scripts/*.js",
    "watch": "npm-watch",
    "pretest": "eslint *.js"
  },
  "author": "Oskar Risberg <kokarn@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://kokarn@github.com/post-tracker/site.git"
  },
  "bugs": {
    "url": "https://github.com/post-tracker/site/issues"
  },
  "engines": {
    "node": "^6.5.0"
  },
  "watch": {
    "dev:components": {
      "patterns": [
        "app/*"
      ],
      "extensions": "js,jsx"
    },
    "lint:scripts": "scripts/*.js",
    "dev:serviceworker": "web/service-worker.js"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^3.5.0",
    "eslint-config-kokarn": "^2.0.0",
    "npm-watch": "^0.1.8",
    "redux-devtools": "^3.3.2",
    "webpack-dev-server": "^2.6.1"
  },
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^3.1.1",
    "cssnano": "^3.10.0",
    "debounce": "^1.0.0",
    "fs-extra": "^2.0.0",
    "minimist": "^1.2.0",
    "mustache": "^2.2.1",
    "postcss": "^6.0.6",
    "query-string": "^4.2.3",
    "react": "^15.3.0",
    "react-cookie": "^1.0.5",
    "react-dom": "^15.3.0",
    "react-redux": "^5.0.2",
    "react-timeago": "^3.1.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "webpack": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "kokarn"
  }
}
